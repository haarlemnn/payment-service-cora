<configuration>
    <property name="CONSOLE_LOG_PATTERN" value="[%-5level] %d{HH:mm:ss.SSS} %logger{36} - %msg [%mdc{}]%n"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>